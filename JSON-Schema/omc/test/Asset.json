{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Personal schema.",
    "type": "object",
    "definitions": {
        "Asset": {
            "type": "object",
            "title": "Asset",
            "description": "A physical or digital object or collection of objects specific to the creation of the Creative Work.",
            "properties": {
                "schemaVersion": {
                    "title": "Schema Version",
                    "$ref": "../omc-v0.1.schema.json#/definitions/core/properties/schemaVersion"
                },
                "entityType": {
                    "type": "string",
                    "title": "Entity Type",
                    "const": "Asset"
                },
                "identifier": {
                    "title": "Identifier",
                    "$ref": "../omc-v0.1.schema.json#/definitions/Utility/properties/identifier"
                },
                "name": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "title": "Asset name",
                    "description": "A human readable name for the asset"
                },
                "description": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "title": "Asset description",
                    "description": "A human readable description of the asset"
                },
                "assetInfo": {
                    "type": "object",
                    "title": "Asset Information",
                    "description": "Properties describing the instance of this asset including version, provenance, variant",
                    "additionalProperties": true
                },
                "version": {
                    "type": "object",
                    "title": "Version Information",
                    "description": "Properties describing the instance of this asset including version, provenance, variant",
                    "additionalProperties": true,
                    "properties": {
                        "versionNumber": {
                            "type": [
                                "number",
                                "string",
                                "null"
                            ]
                        },
                        "name": {
                            "type": "string",
                            "title": "A name for this specific version of the Asset"
                        },
                        "annotation": {
                            "type": "array",
                            "items": {"$ref": "../omc-v0.1.schema.json#/definitions/Utility/properties/note"},
                            "description": "A collection of notes specific to this version"
                        },
                        "variantOf": {"$ref": "#/definitions/Asset/properties/Asset"},
                        "hasVariant": {"$ref": "#/definitions/Asset/properties/Asset"},
                        "alternateOf": {"$ref": "#/definitions/Asset/properties/Asset"},
                        "hasAlternate": {"$ref": "#/definitions/Asset/properties/Asset"}
                    }
                },
                "Asset": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "title": "Asset Group",
                    "description": "The set of Assets that make up an an asset group and has a structuralType of 'assetGroup'",
                    "items": {"$ref": "#/definitions/Asset/properties/Asset"},
                    "additionalItems": true
                },
                "AssetSC": {
                    "title": "Structural Characteristics",
                    "$ref": "#/definitions/Asset/properties/AssetSC"
                },
                "assetFC": {
                    "title": "Functional Characteristics",
                    "$ref": "#/definitions/Asset/properties/assetFC"
                },
                "Context": {
                    "title": "Asset Context",
                    "$ref": "../omc-v0.1.schema.json#/definitions/MediaCreationContext/properties/Context"
                }
            },
            "additionalProperties": false,
            "required": [
                "entityType",
                "identifier"
            ]
        }
    }
}