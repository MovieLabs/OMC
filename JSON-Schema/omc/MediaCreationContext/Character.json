{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "",
	"type": "object",
	"title": "Character",
	"description": "A sentient entity (usually a person but not always) in the script whose specific identity is consequential to the narrative. A Character is generally identified by a specific name.",
	"required": [
		"identifier",
		"entityType"
	],
	"properties": {
		"entityInfo": {
			"title": "Entity Information",
			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"type": "string",
			"title": "Entity Type",
			"const": "Character"
		},
		"identifier": {
			"title": "identifier",
			"$ref": "../Utility/identifier.json#"
		},
		"characterName": {
			"title": "Character Name",
			"$ref": "../Utility/completeName.json#"
		},
		"description": {
			"title": "Character Description",
			"description": "A brief description of the character",
			"type": [
				"string",
				"null"
			]
		},
		"profile": {
			"type": "object",
			"title": "Profile",
			"properties": {
				"physicalCharacteristics": {
					"type": "object",
					"title": "Physical Characteristics",
					"description": "Allows for the the description of certain physical characteristics on a character, things that might be useful to an art department, wardrobe or casting for example.",
					"properties": {
						"species": {
							"type": "string",
							"title": "Species",
							"description": "A species to which this character belongs",
							"examples": [
								"Human",
								"Borg",
								"Goblin",
								"Frog"
							]
						},
						"hairColor": {
							"type": "string",
							"title": "Hair Color",
							"description": "The hair color of the character",
							"examples": [
								"Brown",
								"Pink",
								"Blonde",
								""
							]
						},
						"hairLength": {
							"type": "string",
							"title": "Hair Length",
							"description": "The length of hair of the character"
						},
						"eyeColor": {
							"type": "string",
							"title": "Eye Color",
							"description": "The color of the characters eyes"
						},
						"height": {
							"title": "height",
							"$ref": "../Utility/unitOfMeasurement.json#/properties/linearDistance"
						},
						"weight": {
							"title": "weight",
							"$ref": "../Utility/unitOfMeasurement.json#/properties/weight"
						}
					},
					"additionalProperties": false
				},
				"gender": {
					"$ref": "../Utility/gender.json"
				},
				"background": {
					"type": "object",
					"title": "background",
					"additionalProperties": true
				}
			},
			"additionalProperties": false
		},
		"customData": {
			"title": "Custom Data",
			"$ref": "../Model/definitions.json#/properties/customData"
		},
		"Context": {
			"type": "object",
			"title": "Context",
			"properties": {
				"entityInfo": {
					"title": "Entity Information",
					"$ref": "../Model/definitions.json#/properties/entityInfo"
				},
				"entityType": {
					"type": "string",
					"title": "Entity Type",
					"const": "Context"
				},
				"identifier": {
					"title": "identifier",
					"$ref": "../Utility/identifier.json"
				},
				"hasRelatedAsset": {
					"type": "object",
					"title": "hasRelatedAsset",
					"properties": {
						"Asset": {
							"type": "array",
							"items": {
								"$ref": "../Asset/Asset.json"
							}
						}
					},
					"additionalItems": false
				},
				"uses": {
					"type": "object",
					"title": "uses",
					"properties": {
						"NarrativeProp": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/NarrativeProp.json"
							}
						}
					},
					"additionalItems": true
				},
				"usesWardrobe": {
					"type": "object",
					"title": "usesWardrobe",
					"properties": {
						"NarrativeWardrobe": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/NarrativeWardrobe.json"
							}
						}
					},
					"additionalItems": false
				},
				"appearsIn": {
					"type": "object",
					"title": "appearsIn",
					"properties": {
						"NarrativeScene": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/NarrativeScene.json"
							}
						}
					},
					"additionalItems": true
				},
				"isPortrayedBy": {
					"type": "object",
					"title": "isPortrayedBy",
					"properties": {
						"Participant": {
							"type": "array",
							"items": {
								"$ref": "../Participant/Participant.json"
							}
						}
					},
					"additionalItems": false
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": false
}