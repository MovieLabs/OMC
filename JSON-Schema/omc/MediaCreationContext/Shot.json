{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Shot",
	"description": "A discrete unit of visual narrative with a specified beginning and end.",
	"type": "object",
	"required": [
		"entityType",
		"identifier"
	],
	"properties": {
		"entityInfo": {
			"title": "Entity Information",
			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"title": "Entity Type",
			"type": "string",
			"const": "Shot"
		},
		"identifier": {
			"$ref": "../Utility/identifier.json"
		},
		"shotName": {
			"title": "Shot Name",
			"description": "A human readable name for the shot",
			"type": "string"
		},
		"description": {
			"title": "Shot Description",
			"description": "A brief description of the shot",
			"type": [
				"string",
				"null"
			]
		},
		"customData": {
			"title": "Custom Data",
			"$ref": "../Model/definitions.json#/properties/customData"
		},
		"Context": {
			"title": "Shot Context",
			"description": "Informs scope within the construction process of a Creative Work by describing related entities",
			"type": "object",
			"required": [
				"entityType",
				"identifier"
			],
			"properties": {
				"entityInfo": {
					"title": "Entity Information",
					"$ref": "../Model/definitions.json#/properties/entityInfo"
				},
				"entityType": {
					"type": "string",
					"title": "Entity Type",
					"const": "Context"
				},
				"identifier": {
					"$ref": "../Utility/identifier.json"
				},
				"hasRelatedAsset": {
					"title": "hasRelatedAsset",
					"type": "object",
					"properties": {
						"Asset": {
							"type": "array",
							"items": {
								"$ref": "../Asset/Asset.json"
							}
						}
					}
				},
				"inProductionScene": {
					"title": "inProductionScene",
					"type": "object",
					"properties": {
						"ProductionScene": {
							"type": "array",
							"items": {
								"$ref": "./ProductionScene.json"
							}
						}
					}
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}