						"NarrativeScene": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/NarrativeScene.json"
							}
						}
					}
				},
				"isWardrobeFor": {
					"title": "isWardrobeFor",
					"type": "object",
					"properties": {
						"Character": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/Character.json"
							}
						}
