			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"type": "string",
			"title": "Entity Type",
			"const": "NarrativeWardrobe"
		},
		"identifier": {
			"$ref": "../Utility/identifier.json"
		},
		"name": {
			"title": "Narrative Wardrobe Name",
			"description": "A human readable name for the narrative wardrobe",
			"type": [
				"string",
				"null"
			]
		},
		"description": {
			"title": "Narrative Wardrobe Description",
			"description": "A brief description of the narrative wardrobe",
			"type": [
				"string",
				"null"
			]
		},
		"customData": {
			"title": "Custom Data",
			"$ref": "../Model/definitions.json#/properties/customData"
		},
		"Context": {
			"title": "Narrative Wardrobe Context",
