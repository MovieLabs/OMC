    "entityType": {
      "title": "Entity Type",
      "type": "string",
      "const": "Person"
    },
    "identifier": {
      "$ref": "../Utility/identifier.json"
    },
    "name": {
      "type": [
        "string",
        "null"
      ],
      "title": "Person name",
