    },
    "description": {
      "title": "Description",
      "description": "A brief description of the person",
      "type": [
        "string",
        "null"
      ]
    },
    "personName": {
      "$ref": "../Utility/completeName.json"
    },
    "jobTitle": {
      "type": [
        "string",
        "null"
      ],
