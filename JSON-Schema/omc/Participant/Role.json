{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "",
	"type": "object",
	"title": "Role",
	"description": "A set of properties that define the role of a participant within the production",
	"required": [
		"identifier",
		"entityType"
	],
	"properties": {
		"entityInfo": {
			"title": "Entity Information",
			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"type": "string",
			"title": "Entity Type",
			"const": "Role"
		},
		"identifier": {
			"$ref": "../Utility/identifier.json"
		},
		"name": {
			"type": "string",
			"title": "Role Name",
			"examples": [
				"Director",
				"Producer",
				"Composer",
				"Art Department"
			]
		},
		"description": {
			"type": "string",
			"title": "Role Description"
		},
		"roleType": {
			"type": "string",
			"title": "Role Type",
			"description": "The specific role, typically used in authorization systems"
		},
		"Task": {
			"type": "array",
			"items": {
				"$ref": "../Task/Task.json"
			}
		},
		"Participant": {
			"type": "array",
			"items": {
				"$ref": "../Participant/Participant.json"
			}
		}
	}
}
