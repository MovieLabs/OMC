{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "",
	"title": "Location",
	"description": "A particular place or position either in either the real world or the narrative world.",
	"type": "object",
	"required": [
		"identifier",
		"entityType"
	],
	"properties": {
		"entityInfo": {
			"title": "Entity Information",
			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"title": "Entity Type",
			"type": "string",
			"const": "Location"
		},
		"identifier": {
			"$ref": "../Utility/identifier.json"
		},
		"name": {
			"title": "Location name",
			"description": "A human readable name for the location",
			"type": [
				"string",
				"null"
			]
		},
		"description": {
			"title": "Location Description",
			"description": "A brief description of the location",
			"type": [
				"string",
				"null"
			]
		},
		"address": {
			"$ref": "#/$defs/address"
		},
		"coordinates": {
			"$ref": "#/$defs/coordinates"
		},
		"Context": {
			"title": "Location Context",
			"description": "Informs scope within the construction process of a Creative Work by describing related entities",
			"type": "object",
			"required": [
				"entityType",
				"identifier"
			],
			"properties": {
				"entityInfo": {
					"title": "Entity Information",
					"$ref": "../Model/definitions.json#/properties/entityInfo"
				},
				"entityType": {
					"type": "string",
					"title": "Entity Type",
					"const": "Context"
				},
				"identifier": {
					"$ref": "../Utility/identifier.json"
				},
				"hasRelatedLocation": {
					"title": "hasRelatedLocation",
					"type": "object",
					"properties": {
						"Location": {
							"type": "array",
							"items": {
								"$ref": "./Location.json"
							}
						}
					}
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true,
	"$defs": {
		"address": {
			"type": [
				"object",
				"null"
			],
			"title": "Address",
			"properties": {
				"street": {
					"type": [
						"string",
						"null"
					],
					"title": "Street Address",
					"description": "The street address",
					"examples": [
						"1600 Ampitheatre Parkway",
						"221b Baker Street"
					]
				},
				"locality": {
					"type": [
						"string",
						"null"
					],
					"title": "Address locality",
					"description": "The locality in which the street address is, and which is in the region.",
					"examples": [
						"Mountain View",
						"London"
					]
				},
				"region": {
					"type": [
						"string",
						"null"
					],
					"title": "Address region",
					"description": "The region in which the locality is, and which is in the country",
					"examples": [
						"California",
						"London"
					]
				},
				"postalCode": {
					"type": [
						"string",
						"null"
					],
					"title": "Zip or Postal Code",
					"description": "A zip or postal code",
					"examples": [
						"94534",
						"NW1 6XE"
					]
				},
				"country": {
					"type": [
						"string",
						"null"
					],
					"title": "Country",
					"description": "The country, as an ISO 3166-1 alpha-2 country code",
					"examples": [
						"US"
					]
				},
				"additionalProperties": true
			}
		},
		"coordinates": {
			"type": [
				"object",
				"null"
			],
			"title": "GPS coordinates",
			"description": "A global positioning coordinate in compliance with WGS 84",
			"properties": {
				"latitude": {
					"type": [
						"number",
						"null"
					],
					"minimum": -90,
					"maximum": 90,
					"examples": [
						37.422
					]
				},
				"longitude": {
					"type": [
						"number",
						"null"
					],
					"minimum": -180,
					"maximum": 180,
					"examples": [
						-122.085
					]
				},
				"elevation": {
					"type": [
						"string",
						"null"
					],
					"$ref": "./unitOfMeasurement.json#/properties/linearDistance",
					"examples": [
						"100m",
						"3200ft"
					]
				}
			}
		}
	}
}