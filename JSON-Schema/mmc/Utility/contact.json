{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Contact information for Participants",
  "type": "object",
  "properties": {
    "email": {
      "$ref": "#/$defs/email"
    },
    "telephone": {
      "$ref": "#/$defs/telephone"
    }
  },
  "$defs": {
    "email": {
      "format": "email"
    },
    "telephone": {
      "type": "object",
      "properties": {
        "mobile": {
          "type": [
            "string",
            "null"
          ]
        },
        "business": {
          "type": [
            "string",
            "null"
          ]
        },
        "personal": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
