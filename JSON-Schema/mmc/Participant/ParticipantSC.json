{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"title": "Participant Structural Characteristics",
	"description": "A set of Structural Characteristics for Participants",
	"required": [
		"identifier",
		"entityType"
	],
	"properties": {
		"entityInfo": {
			"title": "Entity Information",
			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"type": "string",
			"title": "Entity Type",
			"const": "ParticipantSC"
		},
		"identifier": {
			"$ref": "../Utility/identifier.json"
		},
		"characteristics": {
			"oneOf": [
				{
					"title": "Organization",
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"structuralType": {
							"type": "string",
							"const": "participant.organization"
						},
						"participantName": {
							"type": "object",
							"title": "Organization Name",
							"properties": {
								"fullName": {
									"type": "string",
									"title": "Organization full name",
									"description": "Organizations full name"						
								},
								"altName": {
									"type": "string",
									"title": "Organization alternate name",
									"description": "An alternate or shortend name"						
								}
							}
						},
						"Location": {
							"$ref": "../Utility/Location.json"
						},
						"contact": {
							"$ref": "../Utility/contact.json"
						}
					}
				},
				{
					"type": "object",
					"title": "Department",
					"additionalProperties": false,
					"properties": {
						"structuralType": {
							"type": "string",
							"const": "participant.department"
						},
						"departmentName": {
							"type": "object",
							"title": "Department Name",
							"properties": {
								"fullName": {
									"type": "string",
									"title": "Department full name",
									"description": "Department's full name"						
								},
								"altName": {
									"type": "string",
									"title": "Department alternate name",
									"description": "An alternate or shortend name"						
								}
							}
						},
						"Location": {
							"$ref": "../Utility/Location.json"
						},
						"contact": {
							"$ref": "../Utility/contact.json"
						}
					}
				},
				{
					"type": "object",
					"title": "Person",
					"additionalProperties": false,
					"properties": {
						"structuralType": {
							"type": "string",
							"const": "participant.person"
						},
						"participantName": {
							"$ref": "../Utility/completeName.json"
						},
						"gender": {
							"$ref": "../Utility/gender.json"
						},
						"Location": {
							"$ref": "../Utility/Location.json"
						},
						"contact": {
							"$ref": "../Utility/contact.json"
						}
					}
				},
				{
					"type": "object",
					"title": "Service",
					"additionalProperties": false,
					"properties": {
						"structuralType": {
							"type": "string",
							"const": "participant.servcie"
						},
						"participantName": {
							"type": "object",
							"title": "Service Name",
							"properties": {
								"fullName": {
									"type": "string",
									"title": "Service full name",
									"description": "Service's full name"						
								},
								"altName": {
									"type": "string",
									"title": "Service alternate name",
									"description": "An alternate or shortend name"						
								}
							}
						},
						"Location": {
							"$ref": "../Utility/Location.json"
						},
						"contact": {
							"$ref": "../Utility/contact.json"
						}
					}
				}
			]
		}
	}
}