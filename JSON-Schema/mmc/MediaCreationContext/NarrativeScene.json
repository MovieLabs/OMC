{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Narrative Scene",
	"description": "Taken from the narrative itself and traditionally defined by creative intent and typically a unity of time, place, action, or theme.",
	"type": "object",
	"required": [
		"entityType",
		"identifier"
	],
	"properties": {
		"entityInfo": {
			"title": "Entity Information",
			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"type": "string",
			"title": "Entity Type",
			"const": "NarrativeScene"
		},
		"identifier": {
			"$ref": "../Utility/identifier.json"
		},
		"name": {
			"title": "Narrative Scene Name",
			"description": "A human readable name for the scene",
			"type": [
				"string",
				"null"
			]
		},
		"description": {
			"title": "Narrative Scene Description",
			"description": "A brief description of the narrative scene",
			"type": [
				"string",
				"null"
			]
		},
		"slugline": {
			"type": "array",
			"title": "Slugline",
			"additionalItems": true,
			"items": {
				"type": "string"
			}
		},
		"customData": {
			"title": "Custom Data",
			"$ref": "../Model/definitions.json#/properties/customData"
		},
		"Context": {
			"title": "Narrative Scene Context",
			"description": "Informs scope within the construction process of a Creative Work by describing related entities",
			"type": "object",
			"required": [
				"entityType",
				"identifier"
			],
			"properties": {
				"entityInfo": {
					"title": "Entity Information",
					"$ref": "../Model/definitions.json#/properties/entityInfo"
				},
				"entityType": {
					"type": "string",
					"title": "Entity Type",
					"const": "Context"
				},
				"identifier": {
					"$ref": "../Utility/identifier.json"
				},
				"uses": {
					"type": "object",
					"title": "usesProp",
					"properties": {
						"SetDressing": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/SetDressing.json"
							}
						}
					}
				},
				"usesProp": {
					"type": "object",
					"title": "usesProp",
					"properties": {
						"NarrativeProp": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/NarrativeProp.json"
							}
						}
					}
				},
				"usesWardrobe": {
					"type": "object",
					"title": "usesWardrobe",
					"properties": {
						"NarrativeWardrobe": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/NarrativeWardrobe.json"
							}
						}
					}
				},
				"features": {
					"type": "object",
					"title": "features",
					"properties": {
						"Character": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/Character.json"
							}
						}
					}
				},
				"hasStoryBoard": {
					"type": "object",
					"title": "hasStoryBoard",
					"properties": {
						"Asset": {
							"type": "array",
							"items": {
								"$ref": "../Asset/Asset.json"
							}
						}
					}
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": true
}