{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Costume",
	"description": "The clothing used in a Portrayal of a Character in the production.",
	"type": "object",
	"required": [
		"entityType",
		"identifier"
	],
	"properties": {
		"entityInfo": {
			"title": "Entity Information",
			"$ref": "../Model/definitions.json#/properties/entityInfo"
		},
		"entityType": {
			"type": "string",
			"title": "Entity Type",
			"const": "Costume"
		},
		"identifier": {
			"$ref": "../Utility/identifier.json"
		},
		"name": {
			"title": "Costume Name",
			"description": "A human readable name for the costume",
			"type": [
				"string",
				"null"
			]
		},
		"description": {
			"title": "Costume Description",
			"description": "A brief description of the costume",
			"type": [
				"string",
				"null"
			]
		},
		"customData": {
			"title": "Custom Data",
			"$ref": "../Model/definitions.json#/properties/customData"
		},
		"Context": {
			"title": "Costume Context",
			"type": "object",
			"required": [
				"entityType",
				"identifier"
			],
			"properties": {
				"entityType": {
					"type": "string",
					"title": "Entity Type",
					"const": "Context"
				},
				"entityInfo": {
					"title": "Entity Information",
					"$ref": "../Model/definitions.json#/properties/entityInfo"
				},
				"identifier": {
					"$ref": "../Utility/identifier.json"
				},
				"isUsedIn": {
					"title": "isUsedIn",
					"type": "object",
					"properties": {
						"ProductionScene": {
							"type": "array",
							"items": {
								"$ref": "../MediaCreationContext/ProductionScene.json"
							}
						}
					}
				}
			},
			"additionalProperties": true
		}
	},
	"additionalProperties": false
}