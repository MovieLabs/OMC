{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "MediaCreationContext#Scene",
	"title": "Scene",
	"description": "Add a description of Scene",
	"type": "object",
	"properties": {
		"sceneDescriptor": {
			"type": "string"
		},
		"sceneDescription": {
			"type": "string"
		},
		"Identifier": {
			"title": "Identifier",
			"type": "array",
			"items": {
				"$ref": "../Utility/Identifier.schema.json#"
			}
		},
		"slugline": {
			"type": "object",
			"description": "A breakdown of the slugline",
			"properties": {
				"slug-p1": {
					"title": "Slugline Position 1",
					"type": "string"
				},
				"slug-p2": {
					"title": "Slugline Position 2",
					"type": "string"
				}
			}
		}
	},
	"required": [
		"sceneDescriptor"
	],
	"additionalProperties": false
}
