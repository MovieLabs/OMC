{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "#StructuralDigitalImage",
	"description": "Structural Characteristics of an Digital Image",
	"type": "object",
	"properties": {
		"structuralType": {
			"title": "structuralType",
			"type": "string",
			"const": "image.digital"
		},
		"Size": {
			"description": "The dimensions of the image, typically in pixels",
			"$ref": "../../Utility/Size.schema.json"
		},
		"colorspace": {
			"title": "Image colorspace",
			"description": "",
			"oneOf": [
				{
					"description": "Prefered controlled terms",
					"enum": ["sRGB", "Adobe RGD", "Need better examples"]
				},
				{
					"description": "Use if no appropriate controled term",
					"type": "string"
				}
			]
		},
		"bitdepth": {
			"title": "Image bit depth",
			"description": "ToDo",
			"enum": [8, 16, 24, 32]
		},
		"channels": {
			"title": "",
			"description": "",
			"type": "array",
			"items": [
				{
					"description": "Prefered controlled terms",
					"type": "string",
					"enum": ["alpha", "mask"]
				},
				{
					"description": "Use if no appropriate controled term",
					"type": "string"
				}
			]
		},
		"fileEncoding": {
			"title": "",
			"description": "The encoding used for the image",
			"oneOf": [
				{
					"description": "Prefered controlled terms",
					"enum": ["jpeg2000"]
				},
				{
					"description": "Use if no appropriate controled term",
					"type": "string"
				}
			]
		},
		"fileExtension": {
			"title": "",
			"description": "The file extension",
			"oneOf": [
				{
					"description": "Prefered controlled terms",
					"enum": ["jpg", "png", "gif"]
				},
				{
					"description": "Use if no appropriate controled term",
					"type": "string"
				}
			]
		},
		
		"sourceReference": {
			"title": "",
			"description": "",
			"oneOf": [
				{
					"description": "Prefered controlled terms",
					"enum": ["website", "stock", "book", "newspaper", "poster"]
				},
				{
					"description": "Use if no appropriate controled term",
					"type": "string"
				}
			]
		},
		
		"assetHash": {
			"title": "assetHash",
			"type": [
				"string",
				"null"
			]
		}
	}
}
