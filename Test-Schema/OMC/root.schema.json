{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://movielabs.com/omc/json/schema/v2.5",
  "type": "array",
  "items": [
    {
      "oneOf": [
        {"$ref": "/#MediaCreationContext/Character"}
      ]
    }
  ],
  "$defs": {
    "MediaCreationContext": {
      "$id": "#MediaCreationContext",
      "type": "object",
      "properties": {
        "Character": {
          "$id": "/Character",
          "type": "object",
          "allOf": [
            {"$ref": "#core/baseEntity"}
          ],
          "properties": {
            "entityType": {"type": "string"},
            "narrativeType": {"type": "string"}
          },
          "required": ["entityType"],
          "unevaluatedProperties": false
        }
      }
    },
    "core": {
      "$id": "#core",
      "baseEntity": {
        "$id": "/baseEntity",
        "type": "object",
        "properties": {
          "schemaVersion": {"type": "string"},
          "name": {"type": "string"}
        },
        "required": ["schemaVersion"]
      }
    }
  }
}