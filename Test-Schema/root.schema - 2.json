{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://movielabs.com/omc/json/schema/v2.5",
  "type": "object",
  "$ref": "#/$defs/MediaCreationContext/properties/Character",
  "$defs": {
    "MediaCreationContext": {
      "type": "object",
      "properties": {
        "Character": {
          "type": "object",
          "allOf": [
            {"$ref": "#core-baseEntity"}
          ],
          "properties": {
            "entityType": {"type": "string"},
            "narrativeType": {"type": "string"}
          },
          "required": ["entityType"],
          "unevaluatedProperties": false
        }
      }
    },
    "core": {
      "type": "object",
      "properties": {
        "baseEntity": {
          "$id": "#core-baseEntity",
          "type": "object",
          "properties": {
            "schemaVersion": {"type": "string"},
            "name": {"type": "string"}
          },
          "required": ["schemaVersion"]
        }
      }
    }
  }
}